  gem 'factory_girl', '~> 4.0'
  gem 'rspec-rails'
  gem 'pry-rails'
  gem 'pry-nav'
  gem 'zonebie'
  gem 'simplecov'
  gem 'rspec-collection_matchers'
  gem 'rails-controller-testing'
end

group :test do
  gem 'webmock'
end

